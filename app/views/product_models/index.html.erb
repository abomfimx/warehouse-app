<section id="product_model">
  <h1>Modelos de Produtos</h1>

  <% if @product_models.any? %>
    <% @product_models.each do |pm| %>
    <div>
      <h2><%= link_to pm.name, pm  %></h2>
      <dl>
        <dt>SKU</dt>
        <dd><%= pm.sku %></dd>
        <dt>Fornecedor</dt>
        <dd><%= pm.supplier.brand_name %></dd>
      </dl>
      <hr>
    </div>
    <% end %>
  <% else %>
      <p>Nenhum modelo de produto cadastrado</p>
  <% end %>

  <%= link_to 'Home', root_path %> | <%= link_to 'Cadastrar Novo', new_product_model_path %>

</section>


